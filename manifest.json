{
  "manifest_version": 3,
  "name": "Xsheet Integration",
  "version": "1.0",
  "description": "X（旧Twitter）のいいねをXsheetに保存できます。",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://localhost:8080/*",
    "http://x-sheet.com/*",
    "https://x-sheet.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
